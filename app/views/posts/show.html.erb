<% if notice %>
    <div class = "alert  alert-info" role=  "alert">
    <%= notice %>
    </div>
    <% end %>
<div class="jumbotron">
<h1 class="display-4"><%= @post.title %></h1>
<p class= "lead" > <%= @post.description %></p>

<hr class="my-4">
<h3>Sub Posts</h3>
<ul>
  <% for @sub_post in @post.sub_posts %>
  <li> <%= @sub_post.content %></li>
  <% end %>
</ul>
<p class = "lead">
<% if can? :update, @post %><%= link_to "Edit", edit_post_path(@post), class: "btn btn-secondary" %>|<% end %>
<%= link_to "Back", posts_path, class: "btn btn-secondary" %>
</p>
</div>